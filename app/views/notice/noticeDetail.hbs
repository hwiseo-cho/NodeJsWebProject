<div style="height: 640px;">
    <table class="table table-list-search">
        <thead>
            <tr>
                <th>공지 글쓰기</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>제목{{row.TITLE}}</td>
                {{#each row}}
                <td><input type="text" name="title" style="width: 543px;" value="{{TITLE}}" readonly></td>
            </tr>
            <tr>
                <td>내용</td>
                <td><textarea name="content" id="" cols="70" rows="10" readonly>{{CONTENT}}</textarea></td>
            </tr>
            <tr>
                <td>작성일</td>
                <td>{{CREATEDATE}}</td>
                {{/each}}
            </tr>
            <tr></tr>
        </tbody>
    </table>   
    <div class="rows" id="b" style="text-align: center;">
        <button class="btn btn-secondary" id="goUpdateBtn" type="button">수정</button>
        <button class="btn btn-secondary" id="cancelBtn" type="button">취소</button>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
<script>
    $(function(){
        $("#goUpdateBtn").on("click", function(){
            var title = $('input[name=title]').val();
            location.href = `/notice/goUpdateNotice/${title}`;
        });

        $("#cancelBtn").on("click",function(){
            location.href = "/notice";
        });
    })

</script>
